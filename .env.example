# Environment Configuration
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_NAME=expense_platform

# Plaid Integration
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret_key
PLAID_ENVIRONMENT=sandbox
PLAID_WEBHOOK_URL=http://localhost:3001/webhook/plaid
PLAID_WEBHOOK_SECRET=your_webhook_secret_key_32_chars_long

# Encryption & Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_key_here
JWT_SECRET=your_jwt_secret_key_here

# Redis Configuration (for sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=300000

# Feature Flags
ENABLE_TRANSACTION_MATCHING=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_WEBHOOK_VALIDATION=true

# Development/Testing
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/expense_platform_test