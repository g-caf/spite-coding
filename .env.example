# Database Configuration (local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=expense_platform_dev
DB_USER=expense_user
DB_PASSWORD=expense_password

# Database URL (production - Render provides this)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Database SSL (production)
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# Security Keys (CHANGE THESE IN PRODUCTION)
DB_ENCRYPTION_KEY=your-strong-32-character-encryption-key-here-change-this
SESSION_SECRET=your-session-secret-change-this-in-production

# Application Settings
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# OCR Service Configuration
OCR_SERVICE_URL=https://api.ocrservice.com
OCR_API_KEY=your-ocr-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourcompany.com

# JWT Configuration  
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRE_TIME=8h
JWT_REFRESH_EXPIRE_TIME=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Redis (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_PREFIX=expense:sess:

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-external-integrations

# Feature Flags
ENABLE_AUTO_CATEGORIZATION=true
ENABLE_RECEIPT_OCR=true
ENABLE_DUPLICATE_DETECTION=true
ENABLE_ADVANCED_MATCHING=true

# Compliance Settings
AUDIT_RETENTION_DAYS=2555
DATA_RETENTION_DAYS=2555
ENABLE_DATA_ANONYMIZATION=true

# Integration Settings
BANK_INTEGRATION_ENABLED=false
CREDIT_CARD_INTEGRATION_ENABLED=false
ACCOUNTING_SYSTEM_INTEGRATION=false

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Development Only
SEED_DATABASE=true
ENABLE_DEBUG_LOGGING=true
DISABLE_AUTH_IN_DEV=false