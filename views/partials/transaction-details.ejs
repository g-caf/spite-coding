<!-- Header -->
<div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between mb-2">
        <h2 class="text-lg font-semibold text-gray-900">Transaction Details</h2>
        <button onclick="document.getElementById('transaction-details').classList.add('hidden')" 
                class="text-gray-400 hover:text-gray-600">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <div class="flex items-center space-x-2">
        <span class="px-2 py-1 text-xs font-medium rounded-full border status-<%= transaction.status %>">
            <%= transaction.status.charAt(0).toUpperCase() + transaction.status.slice(1) %>
        </span>
        <% if (transaction.category_id) { %>
            <% const category = categories.find(c => c.id === transaction.category_id); %>
            <% if (category) { %>
            <div class="flex items-center px-2 py-1 bg-gray-100 rounded-full">
                <span class="text-sm mr-1"><%= category.icon %></span>
                <span class="text-xs font-medium text-gray-700"><%= category.name %></span>
            </div>
            <% } %>
        <% } %>
    </div>
</div>

<!-- Transaction Info -->
<div class="px-6 py-4 border-b border-gray-200">
    <div class="space-y-3">
        <div class="flex justify-between items-start">
            <div class="flex-1 min-w-0">
                <h3 class="text-base font-medium text-gray-900 mb-1">
                    <%= transaction.description %>
                </h3>
                <div class="space-y-1 text-sm text-gray-600">
                    <div class="flex items-center">
                        <i class="fas fa-calendar w-4 mr-2"></i>
                        <%= transaction.formattedDate %>
                    </div>
                    <% if (transaction.merchant) { %>
                    <div class="flex items-center">
                        <i class="fas fa-store w-4 mr-2"></i>
                        <%= transaction.merchant %>
                    </div>
                    <% } %>
                    <% if (transaction.payment_method) { %>
                    <div class="flex items-center">
                        <i class="fas fa-credit-card w-4 mr-2"></i>
                        <%= transaction.payment_method %>
                    </div>
                    <% } %>
                </div>
            </div>
            <div class="text-right">
                <div class="text-2xl font-bold text-gray-900">
                    <%= transaction.formattedAmount %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Category Assignment -->
<div class="px-6 py-4 border-b border-gray-200">
    <h4 class="text-sm font-medium text-gray-900 mb-3">Category</h4>
    <form hx-post="/inbox/transaction/<%= transaction.id %>/category"
          hx-target="[data-transaction-id='<%= transaction.id %>']"
          hx-swap="outerHTML">
        <div class="space-y-2">
            <select name="categoryId" 
                    class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500"
                    onchange="this.form.requestSubmit()">
                <option value="">Select a category...</option>
                <% categories.forEach(category => { %>
                <option value="<%= category.id %>" 
                        <%= transaction.category_id === category.id ? 'selected' : '' %>>
                    <%= category.icon %> <%= category.name %>
                </option>
                <% }); %>
            </select>
        </div>
    </form>
    
    <!-- Quick Category Buttons -->
    <div class="mt-3 flex flex-wrap gap-2">
        <% categories.slice(0, 4).forEach(category => { %>
        <button hx-post="/inbox/transaction/<%= transaction.id %>/category"
                hx-vals='{"categoryId": "<%= category.id %>"}'
                hx-target="[data-transaction-id='<%= transaction.id %>']"
                hx-swap="outerHTML"
                class="inline-flex items-center px-2 py-1 text-xs font-medium rounded-full border border-gray-300 hover:bg-gray-50 <%= transaction.category_id === category.id ? 'bg-blue-50 border-blue-300 text-blue-700' : 'text-gray-700' %>">
            <span class="mr-1"><%= category.icon %></span>
            <%= category.name %>
        </button>
        <% }); %>
    </div>
</div>

<!-- Receipt Section -->
<div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between mb-3">
        <h4 class="text-sm font-medium text-gray-900">Receipt</h4>
        <button onclick="openReceiptModal('<%= transaction.id %>')" 
                class="text-sm text-blue-600 hover:text-blue-800">
            <i class="fas fa-upload mr-1"></i>Upload
        </button>
    </div>
    
    <% if (transaction.receipt_url) { %>
    <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <% if (transaction.receipt_url.endsWith('.pdf')) { %>
                <i class="fas fa-file-pdf text-red-500 text-xl mr-3"></i>
                <% } else { %>
                <i class="fas fa-image text-blue-500 text-xl mr-3"></i>
                <% } %>
                <div>
                    <p class="text-sm font-medium text-gray-900">Receipt uploaded</p>
                    <p class="text-xs text-gray-500">Click to view full size</p>
                </div>
            </div>
            <div class="flex space-x-2">
                <button onclick="window.open('<%= transaction.receipt_url %>', '_blank')" 
                        class="p-2 text-gray-400 hover:text-gray-600" title="View">
                    <i class="fas fa-eye"></i>
                </button>
                <button class="p-2 text-gray-400 hover:text-red-600" title="Delete">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        </div>
        
        <!-- Image Preview -->
        <% if (!transaction.receipt_url.endsWith('.pdf')) { %>
        <div class="mt-3">
            <img src="<%= transaction.receipt_url %>" 
                 alt="Receipt" 
                 class="w-full h-32 object-cover rounded cursor-pointer"
                 onclick="window.open('<%= transaction.receipt_url %>', '_blank')">
        </div>
        <% } %>
    </div>
    <% } else { %>
    <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center">
        <i class="fas fa-receipt text-gray-300 text-2xl mb-2"></i>
        <p class="text-sm text-gray-500 mb-3">No receipt uploaded</p>
        <button onclick="openReceiptModal('<%= transaction.id %>')" 
                class="inline-flex items-center px-3 py-2 text-sm font-medium text-blue-600 border border-blue-300 rounded-md hover:bg-blue-50">
            <i class="fas fa-upload mr-2"></i>Upload Receipt
        </button>
    </div>
    <% } %>
</div>

<!-- Notes Section -->
<div class="px-6 py-4 border-b border-gray-200">
    <h4 class="text-sm font-medium text-gray-900 mb-3">Notes</h4>
    <form hx-post="/inbox/transaction/<%= transaction.id %>/notes"
          hx-trigger="blur changed"
          hx-target="this">
        <textarea name="notes" 
                  rows="3" 
                  placeholder="Add notes about this transaction..."
                  class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-sm"><%= transaction.notes || '' %></textarea>
    </form>
</div>

<!-- Action Buttons -->
<div class="px-6 py-4">
    <div class="flex space-x-3">
        <% if (transaction.status === 'categorized') { %>
        <button hx-post="/inbox/transaction/<%= transaction.id %>/approve"
                hx-target="[data-transaction-id='<%= transaction.id %>']"
                hx-swap="outerHTML"
                class="flex-1 px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700">
            <i class="fas fa-check mr-2"></i>Approve
        </button>
        <button hx-post="/inbox/transaction/<%= transaction.id %>/reject"
                hx-target="[data-transaction-id='<%= transaction.id %>']"
                hx-swap="outerHTML"
                class="flex-1 px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700">
            <i class="fas fa-times mr-2"></i>Reject
        </button>
        <% } else if (transaction.status === 'unmatched') { %>
        <button disabled 
                class="flex-1 px-4 py-2 bg-gray-300 text-gray-500 text-sm font-medium rounded-md cursor-not-allowed">
            <i class="fas fa-exclamation-triangle mr-2"></i>Needs Category
        </button>
        <% } else { %>
        <button class="flex-1 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700">
            <i class="fas fa-edit mr-2"></i>Edit Transaction
        </button>
        <% } %>
    </div>
    
    <!-- Quick Actions -->
    <div class="mt-4 pt-4 border-t border-gray-200">
        <div class="flex justify-between text-xs text-gray-500">
            <div class="flex space-x-4">
                <span>ID: <%= transaction.id %></span>
                <span>Created: <%= transaction.created_at.toLocaleDateString() %></span>
            </div>
            <div class="flex space-x-2">
                <button class="hover:text-gray-700" title="Duplicate">
                    <i class="fas fa-copy"></i>
                </button>
                <button class="hover:text-red-600" title="Delete">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        </div>
    </div>
</div>
